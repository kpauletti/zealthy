{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "allowJs": true,
        "noUncheckedIndexedAccess": true
    },
    "include": ["./src/**/*"],
    "exclude": ["dist", "node_modules"]
}
